<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_common_form_inherit">
            <field name="name">product.template.common.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
            <label for="standard_price" position="replace">
                <label for="standard_price" groups="sales_team.group_sale_manager" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
            </label>
            <xpath expr="//div[@name='standard_price_uom']" position="replace">
                <div name="standard_price_uom" groups="sales_team.group_sale_manager" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
                    <field name="standard_price" widget="monetary" options="{'currency_field': 'cost_currency_id'}"/>
                    <span groups="uom.group_uom" class="oe_read_only">per
                        <field name="uom_name"/>
                    </span>
                </div>
            </xpath>
            </field>
        </record>
    </data>
</odoo>